% Introduction
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{questions}[2019/05/19 A collection of commands to generate different types of questions]

% Load required packages
\RequirePackage{tasks}
\RequirePackage{xargs}

% Questions
\newcounter{zquestion}

\newcommand{\frq}[2][\thezquestion]{%
    \begin{enumerate}%
        \setcounter{enumi}{#1}%
        \item #2%
    \end{enumerate}%
    \stepcounter{zquestion}%
}

\newcommand{\tfq}[2][\thezquestion]{%
    \begin{enumerate}%
        \setcounter{enumi}{#1}%
        \item #2%
        
        \textit{Circle one:} TRUE or FALSE
    \end{enumerate}%
    \stepcounter{zquestion}%
}

\def\choice{\task}
\newcommandx{\mcq}[4][1=1,2=\thezquestion]{%
    \begin{enumerate}%
        \setcounter{enumi}{#2}%
        \item #3%
        
        \begin{tasks}(#1)%
            #4
        \end{tasks}
    \end{enumerate}%
    \stepcounter{zquestion}%
}

